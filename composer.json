{
  "name": "romapost/katas",
  "description": "PHP code katas",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "romapost",
      "email": "roman.postovalov@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "Katas\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "9",
    "vimeo/psalm": "^4.4"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html build/coverage",
    "psalm" : "psalm --show-info=true"
  }
}
